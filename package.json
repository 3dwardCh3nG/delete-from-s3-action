{
  "name": "@3dwardCh3nG/delete-from-s3-action",
  "description": "Delete files from S3",
  "version": "0.0.0",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3dwardCh3nG/delete-from-s3-action/issues"
  },
  "homepage": "https://github.com/3dwardCh3nG/delete-from-s3-action#readme",
  "author": "Edward Cheng <edward@cheng.sydney>",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build index.js --license LICENSE"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "aws-sdk": "^2.1447.0",
    "klaw-sync": "^6.0.0",
    "mime-types": "^2.1.35",
    "conventional-changelog-eslint": "5.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "prettier": "^3.0.3",
    "semantic-release": "21.1.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "tagFormat": "v${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "eslint",
          "releaseRules": [
            {
              "tag": "Breaking",
              "release": "major"
            },
            {
              "tag": "Fix",
              "release": "patch"
            },
            {
              "tag": "Update",
              "release": "minor"
            },
            {
              "tag": "New",
              "release": "minor"
            },
            {
              "tag": "Docs",
              "release": "patch"
            },
            {
              "tag": "Build",
              "release": "patch"
            },
            {
              "tag": "Upgrade",
              "release": "minor"
            },
            {
              "tag": "Chore",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "eslint",
          "parserOpts": {
            "noteKeywords": [
              "Breaking",
              "Fix",
              "Update",
              "New",
              "Docs",
              "Build",
              "Upgrade",
              "Chore"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          },
          "commit": "commits",
          "issue": "issues"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": "dist/*.tgz",
          "successComment": false,
          "failComment": false,
          "failTitle": false,
          "labels": false
        }
      ]
    ]
  }
}
